</head>
<body>
    <div class="index">
        <div class="sidebar">
            <div class="logo">
                <form action="/home" method="get">
                    <button type="submit" style="padding: 0px; border: none; background-color: black;">
                        <img src="https://res.cloudinary.com/du1tos77l/image/upload/v1732711305/icon2_y88pp3.ico" alt="icon" style="width: 4rem;">
                    </button>
                </form>
            </div>
            <div class="name"><h5>LinkNest</h5></div>
            <div class="options">
            <div class="home">
                <form action="/home" method="get">
                    <button class="but"><i class="fa-solid fa-house"></i><span class="label">Home</span></button>
                </form>
                
            </div>
            <div class="notes">
                <form action="/notes">
                    <button class="but"><i class="fa-solid fa-note-sticky"></i><span class="label">Notes</span></button>
                </form>
                
            </div>
            <div class="chatting">
                <form action="/chat" method="get"><button class="but"><i class="fa-solid fa-comments"></i><span class="label">Chat</span></button></form>
            </div>
            <div class="newpost">
                <form action="/newpost" method="get">
                    <button class="but"><i class="fa-solid fa-square-plus"></i><span class="label">New Post</span></button>
                </form>
            </div>
            <div class="todolist">
                <form action="/todolist" method="get">
                    <button class="but"><i class="fa-solid fa-list-check"></i><span class="label">ToDoList</span></button>
                </form>
            </div>
            <div class="settings">
                <form action="/settings" method="get">
                    <button class="but"><i class="fa-solid fa-gear"></i><span class="label">Settings</span></button>
                </form>
            </div>
        </div>
    </div>
        <div class="main">
            <div class="topbar">

            </div>
            <div class="allnotes">
                <div class="addnote">
                    <form action="/todolist" method="get">
                        <button type="submit" id="an">
                            <div class="pure">
                                <div class="add"><i class="fa-solid fa-chevron-left"></i></div>
                                <div class="lab"><label for="note">Back to My TodoList</label></div>
                            </div>
                        </button>
                    </form>
                </div>
                <div class="newn">
                    <form action="/todolist/newtodo" method="post">
                        <div class="h3">
                            <div class="hea"><label for="exampleInputEmail1" class="form-label">Task</label></div>
                            <div class="fill">
                                <textarea name="task" class="in" rows="10" cols="70"></textarea>
                            </div>
                            <div>
                                <label for="priority">Priority Level:</label>
                                <input type="range" id="priority" name="priority" min="1" max="5" value="3" oninput="showPriority(this.value)">
                                <span id="priority-value">3</span>
                            </div>  
                            <div class="sub"><button type="submit" class="btn btn-outline-light">Submit</button></div>
                        </div>
                        
                      </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        function showPriority(value) {
          document.getElementById("priority-value").innerText = value;
      }
    </script>
</body>
</html>