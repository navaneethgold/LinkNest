<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LN:user</title>
    <link rel="icon" href="https://res.cloudinary.com/du1tos77l/image/upload/v1732711305/icon2_y88pp3.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Montserrat:wght@400;700&display=swap');
        *{
            user-select: none;
        }
        /* Target the entire scrollbar */
        ::-webkit-scrollbar {
            width: 5px; /* Width of the vertical scrollbar */
            height: 7px; /* Height of the horizontal scrollbar */
        }
        
        /* Track (the background of the scrollbar) */
        ::-webkit-scrollbar-track {
            background: #f1f1f1; /* Light gray background */
            border-radius: 10px; /* Rounded edges for the track */
        }
        
        /* Thumb (the draggable handle) */
        ::-webkit-scrollbar-thumb {
            background: #888; /* Medium gray color */
            border-radius: 10px; /* Rounded edges for the thumb */
        }
        
        /* Hover effect for the thumb */
        ::-webkit-scrollbar-thumb:hover {
            background: #555; /* Darker gray when hovered */
        }

        body{
            /* background-color: black; */
            background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
            margin: 0;
            padding: 0;
        }
        .sidebar {
            position: fixed; 
            top: 0;         
            left: 0;      
            width: 230px;   
            height: 100vh;
            display: flex;
            justify-content: flex-start;
            flex-direction: column;
            background: linear-gradient(to bottom, #000000, #1c1c1c);
            z-index: 2000;
            border-right: 2px solid white;
        }
        .logo{
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-bottom: 10px;
            width: 230px;
        }
        .options{
            width: 170px;   
            height: 100vh;
            display: flex;
            justify-content: space-evenly;
            /* align-items: center; */
            flex-direction: column;
            padding-left: 50px;
        }
        .name{
            font-family:'Times New Roman', Times, serif;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 230px;

        }
        .home,.notes,.chatting,.settings,.newpost{
            color: white;
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            transition: background-color 0.3s ease,color 0.3s ease;
            border-radius: 10px;
            padding: 2px;
        }
        .home:active,.notes:active,.chatting:active,.settings:active,.newpost:active{
            transform: scale(0.95);
        }
        /* .home:hover,.notes:hover,.chatting:hover,.settings:hover,.newpost:hover{
            background-color: white;
        } */
        /* .but:hover{
            background-color: blue;
        } */
        .but{
            background-color: transparent;
            color: white;
            padding: 0;
            margin: 0;
            border: none;
            width: 100%;
            transition: color 0.3s ease;
        }
        .index{
            display: flex;
            flex-direction: row;
        }
        .main{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            margin-left: 230px;
            transform: scale(0.9);
            transition: opacity 0.3s ease;

        }
        .topbar{
            background-color: black;
            position: fixed;
            top: 0;
            left: 110px;
            height: 30px;
            width: 100%;
            z-index: 1000;
        }
        .label{
            margin-left: 10px;
            font-size: larger;
            /* padding: 5px; */
            font-family: 'Montserrat', sans-serif; 
        }
        .puser{
            width: 1200px;
            height: 580px;
            background-color: transparent;
            margin: 40px;
            margin-bottom: 0;
            color: white;
            display: flex;
            align-items: center;
            flex-direction: column;
        }
        #userdp{
            width: 200px;
            height: 200px;
            border-radius: 50%;
            /* justify-content: flex-start; */
        }
        .dp{
            display: flex;
            justify-content: flex-start;
        }
        .usern{
            display: flex;
            width: 100%;
            position: relative;
            right: 500px;
            justify-content: flex-end;
            align-items: center;
            /* font-size: ; */
        }
        .h1{
            display: flex;
            flex-direction: row;
            padding: 30px;
            border-bottom: 1px solid white;
            width: 100%;
        }
        .posts{
            display: flex;
            flex-wrap: wrap;
            width: 100%;

            gap: 10px;
            height: 500px;
            padding: 20px;
        }
        .info{
            display: flex;
            flex-direction: column;
            width: 100%;
            gap: 20px;
        }
        #photo{
            width: 250px;
            height: 250px;
        }
        .info2{
            width: 100%;
            display: flex;
            flex-direction: row;
            gap: 20px;
            width: 100%;
            display: flex;
            position: relative;
            /* right: 00px; */
            left: 170px;
        }
        /* .flow{
            display: flex;
            justify-content: center;
            align-items: center;
        } */
        #flowv{
            border: none;
            color: blue;
        }
        .h2{
           margin-left: 30px;
        }
        .user_n{
            display: inline;
        }
        .bio{
            font-size: large;
            width: 50%;
            height: auto;
            margin-left: 150px;
        }
        .settings2{
            position: absolute;
            width: 350px;
            height: auto;
            background: rgba(0, 0, 0, 0.6); 
            color: white;
            right: 600px;
            z-index: 5000;
            top: 150px;
            border-radius: 15px;
            opacity: 0;
            display: none;
            transition: opacity 0.3s ease-in-out;
        }
        
        .list-group-item{
            background-color: black;
            color: white;
        }
        .set{
            width: 70px;
            height: 70px;
            position: relative;
            left: 30px;
            display: flex;
            justify-content: center;
            cursor: pointer;
            align-items: center;
        }
        .view{
            cursor: pointer;
        }
        .home:hover,.notes:hover,.chatting:hover,.settings:hover,.newpost:hover{
            background-color: white;
            box-shadow: 0 0 20px #7fff00;
        }
        .but:hover{
            color: black;
        }
        @media (max-width:480px){
            .sidebar{
                /* display: none; */
                width: 60px;
            }
            .label{
                display: none;
            }
            .topbar{
                left: 0;
                height: 50px;
                width: 100%;
                justify-content: center;
                align-items: center;
                z-index: 5000;
                display: none;
            }
            .top,.cont{
                left: 0;
                transform: scale(0.8);
            }
            .logo,.name{
                display: none;
                width: 130px;
                /* padding: 0; */
            }
            .options{
                padding-left: 20px;
            }
            .home,.notes,.chatting,.settings,.newpost{
                width: 30px;
            }
            .home:hover,.notes:hover,.chatting:hover,.settings:hover,.newpost:hover{
                /* background-color: transparent; */
                box-shadow: 0 0 20px #7fff00;
            }
            .addnote{
                /* padding-left: 65px; */
                left: 80px;
            }
            .newn{
                left: 80px;
            }
            #txta{
                width: 250px;
                height: 300px;
            }
            .main{
                /* margin-left: 350px; */
                transform: scale(0.7);
            }
            body{
                height: 100vh;
                width: 100vw;
            }
        }
    </style>
</head>
<body>
    <div class="index">
        <div class="sidebar">
            <div class="logo">
                <form action="/home" method="get">
                    <button type="submit" style="padding: 0px; border: none; background-color: black;">
                        <img src="https://res.cloudinary.com/du1tos77l/image/upload/v1732711305/icon2_y88pp3.ico" alt="icon" style="width: 4rem;">
                    </button>
                </form>
            </div>
            <div class="name" style="  font-family: 'Montserrat', sans-serif;"><h5>LinkNest</h5></div>
            <div class="options">
            <div class="home">
                <form action="/home" method="get">
                    <button class="but"><i class="fa-solid fa-house"></i><span class="label">Home</span></button>
                </form>
                
            </div>
            <div class="notes">
                <form action="/notes">
                    <button class="but"><i class="fa-solid fa-note-sticky"></i><span class="label">Notes</span></button>
                </form>
                
            </div>
            <div class="chatting">
                <form action="/chat" method="get"><button class="but"><i class="fa-solid fa-comments"></i><span class="label">Chat</span></button></form>
            </div>
            <div class="newpost">
                <form action="/newpost" method="get">
                    <button class="but"><i class="fa-solid fa-square-plus"></i><span class="label">New Post</span></button>
                </form>
            </div>
            <div class="settings">
                <form action="/settings" method="get">
                    <button class="but"><i class="fa-solid fa-gear"></i><span class="label">Settings</span></button>
                </form>
            </div>
        </div>
    </div>
        <div class="main">
            <!-- <div class="topbar">

            </div> -->
            <div class="puser">
                <div class="h1">
                    <div class="dp"><img src="<%=user.dp%>" alt="dp" id="userdp"></div>
                    <div class="info">
                        <div class="flow">
                            <div class="usern"><h3 class="user_n" style="  font-family: 'Montserrat', sans-serif;"><%=user.username%></h3> 
                                <div class="h2">
                                    <%if(send!="Following"){%>
                                        <form action="/home/<%=user.username%>/following?_method=PUT" method="post">
                                            <button type="submit" class="btn btn-outline-dark" id="flowv"><%=send%></button>
                                        </form> 
                                    <%}%>
                                    <%if(send=="Following"){%>
                                        <form action="/unfollow/<%=present_user.username%>/<%=user.username%>?_method=PUT" method="post">
                                            <button type="submit" class="btn btn-outline-dark" id="flowv"style="  font-family: 'Montserrat', sans-serif;">UnFollow</button>
                                        </form> 
                                    <%}%>
                                </div>  
                                <%if(present_user.username==user.username){%>
                                <div class="set"><i class="fa-solid fa-gears" style="font-size: 30px;"></i></div>
                                <%}%>
                                
                            </div>
                            
                        </div>
                        <div class="info2">
                                <div class="pust"><h5 style="  font-family: 'Montserrat', sans-serif;"><%=posts.length%> Posts</h5></div>
                                <div class="fowing"><h5 style="  font-family: 'Montserrat', sans-serif;"><%=user.following.length%> Following</h5></div>
                                <!-- <div id="sairam" class="view" ><button type="submit">Following</button></div> -->
                                <div class="foers"><h5 style="  font-family: 'Montserrat', sans-serif;"><%=user.followers.length%> Followers</h5></div>
                        </div>
                        <div class="bio">
                            <%=user.bio%>
                        </div>
                    </div>

                    
                </div>
                <h3 style="  font-family: 'Montserrat', sans-serif;">Posts</h3>
                <div class="posts">
                    <%for(const post of posts){%>
                        <div class="photo">
                            <form action="/home/<%=post._id%>" method="get">
                                <button type="submit" style="border: none; padding: 0px; background-color: black;">
                                    <%if(post.photo_link!=null){%>
                                        <img src="<%=post.photo_link%>" alt="photo" id="photo">
                                    <%}else{%>
                                        <img src="https://res.cloudinary.com/du1tos77l/image/upload/v1733236947/b2jiyp6bopzqhsnvekim.jpg" alt="photo" id="photo">
                                    <%}%>
                                </button>
                            </form>
                        </div>
                    <%}%>
                </div>                
            </div>
        </div>
        <div class="settings2" style="border-radius: 15px;">
            <!-- <div class="menu" > -->
             
            <ul class="list-group" style="border-radius: 15px;">
                    <form action="/<%=user.username%>/savedposts" method="get">
                        <button type="submit" style="padding: 0; border: none; width: 100%; border-top-left-radius: 15px; border-top-right-radius: 15px;"><li class="list-group-item" style="  font-family: 'Montserrat', sans-serif; border-top-left-radius: 15px; border-top-right-radius: 15px;">Saved Posts</li></button>
                    </form>
                    
                    <form action="/<%=user.username%>/followers" method="get">
                        <button type="submit" style="padding: 0; border: none; width: 100%; "><li class="list-group-item" style="font-family: 'Montserrat', sans-serif;">View Followers</li></button>
                    </form>
                    <form action="/<%=user.username%>/following" method="get">
                        <button type="submit" style="padding: 0; border: none; width: 100%;"><li class="list-group-item" style="font-family: 'Montserrat', sans-serif;">View Following</li></button>
                    </form>
                    <form action="/settings/logout" method="post">
                        <button type="submit" style="padding: 0; border: none; width: 100%; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;"><li class="list-group-item" style="color: red; font-family: 'Montserrat', sans-serif; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;  ">LogOut</li></button>
                    </form>
                  </ul>
            <!-- </div> -->
        </div>
        </div>
    <script>
        const set=document.querySelector(".set");
        const settings2=document.querySelector(".settings2");
        const main=document.querySelector(".main");
        const info2=document.querySelector(".info2");
        const sidebar=document.querySelector(".sidebar");
        set.addEventListener("click",()=>{
            if(settings2.style.opacity==0){
                settings2.style.opacity=1
                main.style.opacity=0.25;
                sidebar.style.opacity=0.25
                settings2.style.display="block";
            }else{
                settings2.style.opacity=0
                main.style.opacity=1;
                sidebar.style.opacity=1;
                settings2.style.display="none";
            }
        })
        document.addEventListener("click",(event)=>{
            if(!settings2.contains(event.target)&&!set.contains(event.target)){
                settings2.style.opacity=0
                main.style.opacity=1;
                sidebar.style.opacity=1;
            }
        })
    </script>
</body>
</html>