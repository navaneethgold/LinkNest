<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LN:Login</title>
    <link rel="icon" href="https://res.cloudinary.com/du1tos77l/image/upload/v1732711305/icon2_y88pp3.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Montserrat:wght@400;700&display=swap');
        * {
            margin: 0;
            padding: 0;
            user-select: none;
        }
        .login {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 30px;
            /* border: 2px solid white; */
            width: 75vh;
            color: white;
        }
        body {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            height: 100vh;
            flex-direction: row;
            background: linear-gradient(to right,black,white);
            transform: scale(0.9);
        }
        #info {
            display: flex;
            flex-direction: column;
        }
        #validates {
            width: 300px;
        }
        .over {
            display: flex;
            gap: 40px;
            flex-direction: column;
        }
        .forgot {
            margin-top: 10px;
            width: 100%;
        }
        .form-control{
            background-color: black;
            border: 2px solid white;
        }
        .form-control::placeholder{
            color: white;
        }
        .login{
            gap: 10px;
            background-color: black;
            border-radius: 15px;
            box-shadow: 0 0 20px white;
            transition: transform 0.3s ease,box-shadow 0.3s ease;
        }
        .login:hover{
            transform: scale(1.05);
            box-shadow: 0 0 20px #7fff00;
        }
        #l2:hover{
            background-color: #7fff00;
        }
        .wel{
            display: flex;
            flex-direction: column;
            gap: 20px;
            justify-content: center;
            align-items: center;
            color: white;
            width: 100%;
        }
        .wel2{
            gap: 8px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-family: 'Montserrat', sans-serif; /* Headings */
        }
        .cap{
            opacity: 0.8;
        }
        .no{
            display: flex;
            flex-direction: row;
            gap: 10px;
            font-size:medium;
            /* justify-content: center; */
            align-items: center;
            width: 100%;
            position: relative;
            top: 20px;
            left: 20px;
        }
        .l1{
            font-family: 'Montserrat', sans-serif; /* Headings */
        }
        label{
            font-family: 'Montserrat', sans-serif; /* Headings */
        }
        #l2:active{
            transform: scale(0.95);
        }
        .ph{
          display: none;
        }
        @media (max-width:480px){
            .wel{
              display: none;
            }
            .login{
              transform: scale(0.8);
            }
            .ph{
              display: block;
              color: white;
              display: flex;
              justify-content: center;
              flex-direction: row;
              align-items: center;
              gap: 30px;
            }
            img{
              width: 70px;
            }
            .l1{
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="login">
        <div class="ph">
            <div class="phone"><img src="https://res.cloudinary.com/du1tos77l/image/upload/v1732711305/icon2_y88pp3.ico" alt="LoGo"></div>
            <div class="desphone">Welcome back to LinkNest</div>  
          </div>
        <div class="l1"><h3>Login to LinkNest</h3></div>
        
        <form class="row g-3 needs-validation" id="info" method="post" action="/login" novalidate>
            <div class="over">
                <div class="col-md-4 position-relative">
                    <label for="validationTooltipUsername" class="form-label">Username</label>
                    <div class="input-group has-validation" id="validates">
                        <input name="username" type="text" class="form-control" id="validationTooltipUsername" required placeholder="Enter your username...">
                    </div>
                </div>
                <div class="col-md-4 position-relative">
                    <label for="validationTooltipPassword" class="form-label">Password</label>
                    <div class="input-group has-validation" id="validates">
                        <input name="password" type="password" class="form-control" id="validationTooltipPassword" required placeholder="Enter your Password...">
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-outline-light" type="submit" style="border: 2px solid #7fff00;   font-family: 'Montserrat', sans-serif;" id="l2">Submit</button>
                </div>
            </div>
        </form>

        <!-- Forgot Password Form -->
        <div class="forgot">
            <form action="/forgotpassword?_method=PUT" method="post" id="forgotform">
                <input type="hidden" name="un" id="hiddenusername">
                <button
                    style="color: blue; text-decoration: underline; background-color: black; padding: 0; border: transparent; width: 180px;"
                    type="button"
                    onclick="accesshidden()">
                    Forgot Password?
                </button>
            </form>
        </div>
        <div class="no">
            <div class="n1" style="  font-family: 'Roboto', sans-serif;"><h6>Don't have an account?</h6></div>
            <div class="im">
                <form action="/signup" method="get">
                    <button type="submit" style="padding: 0; border: none; text-decoration: underline; background-color: black; color: blue;">SignUp</button>
                </form>
            </div>
            
        </div>
    </div>
    <div class="wel">
        <div class="logo"><img src="https://res.cloudinary.com/du1tos77l/image/upload/v1732711305/icon2_y88pp3.ico" alt="Logo"></div>
        <div class="wel2">
            <div class="headi"><h3>Welcome Back to LinkNest</h3></div>
            <div class="cap"><h5>Grow your Network</h5></div>
        </div>
        
    </div>
    <script>
        function accesshidden() {
            const visibleUsername = document.querySelector("input[name='username']");
            const hiddenUsername = document.getElementById("hiddenusername");

            if (visibleUsername.value) {
                hiddenUsername.value = visibleUsername.value;
                document.getElementById("forgotform").submit();
            } else {
                alert("Please enter your username before clicking on 'Forgot Password'.");
            }
        }
    </script>
</body>
</html>
