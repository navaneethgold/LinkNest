        body{
            background-color: black;
            margin: 0;
            padding: 0;
        }
        .sidebar {
            position: fixed; 
            top: 0;         
            left: 0;      
            width: 230px;   
            height: 100vh;
            display: flex;
            justify-content: flex-start;
            /* align-items: center; */
            flex-direction: column;
            background-color: black;
            z-index: 2000;
            border-right: 2px solid white;
        }
        .logo{
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-bottom: 10px;
            width: 230px;
        }
        .options{
            width: 170px;   
            height: 100vh;
            display: flex;
            justify-content: space-evenly;
            /* align-items: center; */
            flex-direction: column;
            padding-left: 50px;
        }
        .name{
            font-family:'Times New Roman', Times, serif;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 230px;

        }
        .home,.notes,.chatting,.settings,.newpost{
            color: white;
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
        }
        .home:active,.notes:active,.chatting:active,.settings:active,.newpost:active{
            transform: scale(0.95);
        }
        .but{
            background-color: black;
            color: white;
            padding: 0;
            margin: 0;
            border: 1px solid black;
        }
        .index{
            display: flex;
            flex-direction: row;
        }
        .card{
            margin: 15px;
            /* border-bottom: 1px solid rgb(122, 119, 119); */
            background-color: black;
        }
        .posts{
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            width: 100%;
            margin-top: 90px;
            background-color: black;
        }
        #inputPassword2::placeholder {
            color: white; /* Change placeholder color */
            opacity: 1; /* Ensure it is fully opaque */
        }
        .main{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
        }
        .topbar{
            background-color: black;
            position: fixed;
            top: 0;
            left: 110px;
            height: 80px;
            width: 100%;
            z-index: 1000;
        }
        .label{
            /* display: none; */
            margin-left: 10px;
            font-weight: bold;
            font-size: larger;
        }
        .addnote{
            margin-top: 100px;
            color: white;
            padding: 8px;
            background-color: white;
            width: 230px;
            display: flex;
            justify-content: center;
            border-radius: 30px;
            position: fixed;
            left: 250px;
        }
        .addnote:hover,label:hover{
            cursor: pointer;
        }
        .pure{
            display: flex;
            flex-direction: row;
            gap: 10px;
            color: black;
        }
        #an{
            padding: 0;
            border: none;
            background-color: white;
        }
        .allnotes{
            display: flex;
            flex-direction: column;
            background-color: black;
            /* justify-content: center; */
            align-items: center;
            width: 100%;
            height: 600px;
        }
        .h3{
            color: white;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .form-control{
            background-color: white;
            color: white;
        }
        .newn{
            position: fixed;
            top: 200px;
        }
        .in{
            border-radius: 10px;
            font-size: medium;
        }
